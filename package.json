{
  "name": "gmail-desktop",
  "productName": "Gmail Desktop",
  "version": "3.0.0-alpha.33",
  "description": "Nifty Gmail desktop app",
  "private": true,
  "repository": "timche/gmail-desktop",
  "author": "Tim Cheung <tim@cheung.io>",
  "license": "MIT",
  "main": "build-js/main/index.js",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "electron-builder install-app-deps",
    "format": "prettier --write",
    "format:all": "prettier --write \"**/*.{ts,tsx,js,css,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,css,json}\"",
    "lint": "run-p lint:*",
    "lint:ts": "xo",
    "lint:css": "stylelint \"src/main/**/*.css\"",
    "type-check": "tsc",
    "update-user-agents": "node scripts/update-user-agents.js",
    "start:main": "nodemon -x \"node scripts/build-main.js && electron .\" -w src -e ts,json,css",
    "start:renderer": "cross-env WATCH=true node scripts/build-renderer.js",
    "start": "run-p start:*",
    "build:main": "cross-env NODE_ENV=production node scripts/build-main.js",
    "build:renderer": "cross-env NODE_ENV=production node scripts/build-renderer.js",
    "build": "run-s build:*",
    "dist:macos": "electron-builder --macos --universal",
    "dist:linux": "electron-builder --linux",
    "dist:windows": "electron-builder --windows",
    "dist": "run-s dist:*",
    "clean": "del build-js dist",
    "clean:all": "del build-js dist node_modules",
    "storybook": "start-storybook"
  },
  "dependencies": {
    "@sindresorhus/do-not-disturb": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@chakra-ui/react": "^1.8.3",
    "@emotion/react": "^11.8.0",
    "@emotion/styled": "^11.8.0",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-toolbars": "^6.4.19",
    "@storybook/addon-viewport": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.18.12",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.3",
    "builder-util-runtime": "^8.9.2",
    "cross-env": "^7.0.3",
    "darkreader": "^4.9.44",
    "del-cli": "^4.0.1",
    "domhandler": "^4.3.0",
    "electron": "^15.3.7",
    "electron-builder": "^22.14.13",
    "electron-context-menu": "^3.1.2",
    "electron-dl": "^3.3.0",
    "electron-log": "^4.4.6",
    "electron-notarize": "^1.1.1",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.5",
    "electron-util": "^0.17.2",
    "element-ready": "^6.2.0",
    "esbuild": "^0.14.23",
    "framer-motion": "^6.2.6",
    "html-react-parser": "1.2.4",
    "husky": "^6.0.0",
    "lint-staged": "^12.3.4",
    "lodash.debounce": "^4.0.8",
    "nanoid": "^3.3.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "p-wait-for": "^4.1.0",
    "prettier": "^2.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-xo": "^0.20.1",
    "type-fest": "^1.4.0",
    "typescript": "^4.5.5",
    "write-json-file": "^5.0.0",
    "xo": "^0.38.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "xo --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "prettier": true,
    "rules": {
      "@typescript-eslint/no-floating-promises": "off"
    },
    "overrides": [
      {
        "files": [
          "src/renderer/**"
        ],
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "cases": {
                "kebabCase": true,
                "pascalCase": true
              }
            }
          ]
        }
      },
      {
        "files": [
          "**/stories.tsx"
        ],
        "rules": {
          "@typescript-eslint/consistent-type-assertions": "off",
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-xo",
      "stylelint-config-prettier"
    ],
    "rules": {
      "declaration-no-important": null,
      "selector-class-pattern": null,
      "property-no-vendor-prefix": null,
      "no-descending-specificity": null,
      "selector-max-compound-selectors": null
    }
  },
  "build": {
    "generateUpdatesFilesForAllChannels": true,
    "artifactName": "${name}-${version}-${os}.${ext}",
    "files": [
      "build-js/",
      "static/"
    ],
    "appId": "io.cheung.gmail-desktop",
    "afterSign": "scripts/build-hook-after-sign.js",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Network;Office"
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": [
        "nsis",
        "zip"
      ]
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
