{
  "name": "gmail-desktop",
  "productName": "Gmail Desktop",
  "version": "3.0.0-alpha.10",
  "description": "Unofficial Gmail Desktop App",
  "private": true,
  "repository": "timche/gmail-desktop",
  "author": "Tim Cheung <tim@cheung.io>",
  "license": "MIT",
  "main": "dist-main/app.js",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "electron-builder install-app-deps",
    "prettier": "prettier --write",
    "prettify": "yarn prettier -- '**/*.{ts,tsx,js,css,json}'",
    "lint": "run-p lint:*",
    "lint:ts": "xo",
    "lint:css": "stylelint 'src-main/**/*.css'",
    "type-check": "tsc",
    "update-user-agents": "node scripts/update-user-agents.js",
    "dev:main": "nodemon -x 'node scripts/compile-main.js && electron .' -w src-main -e ts,json,css",
    "dev:renderer": "cross-env WATCH=true node scripts/compile-renderer.js",
    "dev": "run-p dev:*",
    "compile:main": "cross-env NODE_ENV=production node scripts/compile-main.js",
    "compile:renderer": "cross-env NODE_ENV=production node scripts/compile-renderer.js",
    "compile": "run-s compile:*",
    "build:macos": "electron-builder --macos --universal --publish never",
    "build:linux": "electron-builder --linux --publish never",
    "build:windows": "electron-builder --windows --publish never",
    "build": "run-s compile:* build:*",
    "clean": "del dist*",
    "clean:all": "del dist* node_modules",
    "storybook": "start-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@chakra-ui/react": "^1.3.4",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@sindresorhus/tsconfig": "^0.9.0",
    "@storybook/addon-actions": "^6.1.21",
    "@storybook/addon-toolbars": "^6.1.21",
    "@storybook/addon-viewport": "^6.1.21",
    "@storybook/react": "^6.1.21",
    "@types/node": "^14.14.34",
    "@types/react-dom": "^17.0.2",
    "babel-loader": "^8.2.2",
    "builder-util-runtime": "^8.7.3",
    "cross-env": "^7.0.3",
    "darkreader": "^4.9.27",
    "del-cli": "^3.0.1",
    "domhandler": "^4.0.0",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "electron-context-menu": "^2.5.0",
    "electron-dl": "^3.2.0",
    "electron-log": "^4.3.2",
    "electron-notarize": "^1.0.0",
    "electron-store": "^7.0.2",
    "electron-updater": "^4.3.8",
    "electron-util": "^0.14.2",
    "element-ready": "^5.0.0",
    "esbuild": "^0.9.2",
    "framer-motion": "^3.10.3",
    "got": "^11.8.2",
    "html-react-parser": "^1.2.4",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "nanoid": "^3.1.21",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "p-wait-for": "^3.2.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "stylelint": "^13.11.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-xo": "^0.20.0",
    "typescript": "^4.2.3",
    "write-json-file": "^4.3.0",
    "xo": "^0.38.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "xo --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "prettier": true,
    "rules": {
      "@typescript-eslint/no-floating-promises": "off"
    },
    "overrides": [
      {
        "files": [
          "src-renderer/**"
        ],
        "rules": {
          "unicorn/filename-case": "off"
        }
      },
      {
        "files": [
          "**/stories.tsx"
        ],
        "rules": {
          "@typescript-eslint/consistent-type-assertions": "off",
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-xo",
      "stylelint-config-prettier"
    ],
    "rules": {
      "declaration-no-important": null,
      "selector-class-pattern": null,
      "property-no-vendor-prefix": null,
      "no-descending-specificity": null
    }
  },
  "build": {
    "generateUpdatesFilesForAllChannels": true,
    "artifactName": "${name}-${version}-${os}.${ext}",
    "files": [
      "**/*",
      "!media${/*}",
      "!scripts${/*}"
    ],
    "appId": "io.cheung.gmail-desktop",
    "afterSign": "scripts/build-hook-after-sign.js",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": true,
      "hardenedRuntime": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "pacman",
        "snap",
        "tar.bz2"
      ],
      "category": "Network;Office"
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
